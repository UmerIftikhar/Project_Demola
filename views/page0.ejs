                < nw field 1-->


                <input type="email" name="email" id="usremail" placeholder="EMAIL ADDRESS" class="field" required>
                
				
				<input type="password" name="password" id="password" placeholder="PASSWORD" class="field" required>
                <!-- new field 2 -->

                <input type="checkbox" name="promo" id="promo-check" class="check" unchecked required=""><label for="promo-check"
